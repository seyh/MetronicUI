<script type="text/javascript">
    var UITree = function () {

        var contextualMenuSample = function () {

            $("#tree_3").jstree({
                "core": {
                    "themes": {
                        "responsive": 'dark'
                    },
                    "check_callback": true,
                    'data': [
                        {
                        "text": "Parent Node",
                        "children": [{"text": "Initially selected","icon": "fa fa-hospital-o"}]
                    }]
                },
                'unique': {
                    'duplicate': function (name, counter) {
                        return name + ' ' + counter;
                    }
                },
                "types": {
                    "folder": { "icon": "fa fa-hospital-o" },
                    'file': { 'valid_children': [], 'icon': 'fa fa-wifi' }
                },
                'plugins': ['state', 'dnd', 'sort', 'types', 'contextmenu', 'unique']
            });

        }

        return {
            //main function to initiate the module
            init: function () {
                contextualMenuSample();

            }

        };

    }();

    if (App.isAngularJsApp() === false) {
        jQuery(document).ready(function () {
            UITree.init();
        });
    }
</script>