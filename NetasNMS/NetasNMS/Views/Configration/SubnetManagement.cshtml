        $("input[name=allowedIps]").change(function () {
            allowedType = this.value;
            if (allowedType === 'all') {
                $("#rangeInput_1").attr("disabled", true);
                $("#rangeInput_2").attr("disabled", true);
                $("#specialArea").attr("disabled", true);
            }
            if (allowedType === 'range')
            {
                $("#rangeInput_1").attr("disabled", false);
                $("#rangeInput_2").attr("disabled", false);
                $("#specialArea").attr("disabled", true);
                $("#specialArea").val("");
            }
            if (allowedType === 'specialcheck') {
                $("#rangeInput_1").attr("disabled", true);
                $("#rangeInput_2").attr("disabled", true);
                $("#specialArea").attr("disabled", false);
                $("#rangeInput_2").val("");
                $("#specialArea").val("");
            }
        });

        $('#addSubnet').on('click', function () {
            console.log(allowedType);
            if (allowedType === 'all') {
                var subnetObj = {
                    enable: true,
                    id: null,
                    ipAddress: $('#subnetIP').val(),
                    subnetMask: $('#subnetMask').val(),
                    description: $('#subnetDescription').val(),
                    name: $('#subnetName').val(),
                    range: "all"
                };
            }
            if (allowedType === 'range') {
                var subnetObj = {
                    enable: true,
                    id: null,
                    ipAddress: $('#subnetIP').val(),
                    subnetMask: $('#subnetMask').val(),
                    description: $('#subnetDescription').val(),
                    name: $('#subnetName').val(),
                    range: 'range#' + $("#rangeInput_1").val() + '#' + $("#rangeInput_2").val()
                };
            }
            if (allowedType === 'specialcheck') {
                var subnetObj = {
                    enable: true,
                    id: null,
                    ipAddress: $('#subnetIP').val(),
                    subnetMask: $('#subnetMask').val(),
                    description: $('#subnetDescription').val(),
                    name: $('#subnetName').val(),
                    range: 'custom#' + $("#specialArea").val()
                };
            }
            $.ajax({
                url: 'http://217.78.97.240:8081/data/asset/device/subnet',
                type: "POST",
                data: JSON.stringify(subnetObj),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                error: function () {
                    swal("Cancelled", "Subnet Device is not added", "error");
                },
                success: function (successMsg) {
                    swal({
                        position: 'top-right',
                        type: 'success',
                        title: 'Your subnet device added',
                        showConfirmButton: false,
                        timer: 1500
                    })
                    console.log(successMsg);
                }
            });
            console.log(JSON.stringify(subnetObj));
        });
