<div id="clientradiotypes" class="col-lg-6 col-xs-12 col-sm-12">
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-bar-chart"></i>
                <span class="caption-subject bold uppercase" style="display:block; float:left; font-size: 14px;">Client Radio Types</span>
                <span class="caption-helper" style="display:block; float:right; font-size: 12px; margin-top:4px;margin-left: 100px;">
                    Last updated time:
                    <span data-bind="text: LastUpdate()"></span>
                </span>
            </div>
        </div>

        <div class="portlet-body">
            <div class="row">
                <div class="col-lg-6 col-xs-12 col-sm-12">
                    <div id="chart_66" class="chart" style="height: 240px;"> </div>
                </div>
                <div class="col-lg-6 col-xs-12 col-sm-12">
                    <span class="caption-subject font-dark" style="border-bottom:1px solid #eee; padding-bottom:10px; margin-bottom:15px; display:block">
                        <span class="thin" style="font-size:14px; color:#aaa;">
                            Total Count :
                            <span class="bold" style="color:red"><span data-bind="text: Unreachable() + Warning() + Good()"></span></span>
                        </span>
                    </span>
                    <table class="table table-striped table-bordered table-hover dt-responsive" width="100" id="sample_1">
                        <thead>
                            <tr>
                                <th class="all" style="width:20%; text-align:center;">Type </th>
                                <th class="all" style="width:10%; text-align:center;">Count</th>
                                <th class="all" style="width:10%; text-align:center;">%</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <i class="fa fa-arrow-circle-up" style="color:#F1C40F"></i>
                                    <a href=""><span>2,4G</span></a>
                                </td>
                                <td>
                                    <div class="status-number" style="text-align:center; font-size:12px; margin-top:3px"><span data-bind="text: Unreachable()"></span></div>
                                </td>
                                <td>
                                    <div class="status-number" style="text-align:center; font-size:12px; margin-top:3px"><span data-bind="text: ((Unreachable()/(Unreachable() + Warning() + Good())) * 100).toFixed(2)"></span>%</div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="fa fa-arrow-circle-right" style="color:#36c6d3"></i>
                                    <a href=""><span>5G</span></a>
                                </td>
                                <td>
                                    <div class="status-number" style="text-align:center; font-size:12px; margin-top:3px"><span data-bind="text: Warning()"></span></div>
                                </td>
                                <td>
                                    <div class="status-number" style="text-align:center; font-size:12px; margin-top:3px"><span data-bind="text: ((Warning()/(Unreachable() + Warning() + Good())) * 100).toFixed(2)"></span>%</div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var pieChartRadio = function () {
        return {
            initPieChart: function () {
                var chart = AmCharts.makeChart("chart_66", {
                    "type": "pie",
                    "theme": "light",
                    "fontFamily": 'Open Sans',
                    "color": '#888',
                    "dataProvider": [{
                        "status": "5G",
                        "count": 5,
                        "color": "#36c6d3"
                    }, {
                        "status": "2,4G",
                        "count": 4,
                        "color": "#F1C40F"
                    }],
                    "valueField": "count",
                    "titleField": "status",
                    "colorField": "color",
                    "labelRadius": 5,
                    "radius": "20%",
                    "innerRadius": "50%",
                    "labelText": "[[title]] : [[value]]",
                    "exportConfig": {
                        menuItems: [{
                            icon: App.getGlobalPluginsPath() + "amcharts/amcharts/images/export.png",
                            format: 'png'
                        }]
                    }
                });

                $('#chart_66').closest('.portlet').find('.fullscreen').click(function () {
                    chart.invalidateSize();
                });
            }
        }
    }();

