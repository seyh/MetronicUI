<div id="currentAlarm" class="col-lg-6 col-xs-12 col-sm-12">
    <div class="portlet light">
        <div class="portlet-title">
            <div class="caption ">
                <i class="fa fa-bell-o font-dark"></i>
                <span class="caption-subject font-dark bold uppercase">Current Alarms</span>
            </div>
        </div>
        <div class="portlet-body">
            <div id="dashboard_amchart_3" class="CSSAnimationChart" style="height:240px"></div>
        </div>
    </div>
</div>

<script src="../assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    var BarChart = function () {
        return {
            initAmChart3: function (AlarmCountViewModel) {
                if (typeof (AmCharts) === 'undefined' || $('#dashboard_amchart_3').size() === 0) {
                    return;
                }

                var chart = AmCharts.makeChart("dashboard_amchart_3", {
                    "type": "serial",
                    "theme": "light",
                    "marginRight": 70,
                    "dataProvider": [
                        {
                            "alarm": "Emergency",
                            "count": AlarmCountViewModel.Emergency(),
                            "color": "#FF0F00"
                        }, {
                            "alarm": "Critical",
                            "count": AlarmCountViewModel.Critical(),
                            "color": "#FF6600"
                        }, {
                            "alarm": "Alert",
                            "count": AlarmCountViewModel.Alert(),
                            "color": "#FF9E01"
                        }, {
                            "alarm": "Error",
                            "count": AlarmCountViewModel.Error(),
                            "color": "#FCD202"
                        }, {
                            "alarm": "Warning",
                            "count": AlarmCountViewModel.Warning(),
                            "color": "#FCD202"
                        }, {
                            "alarm": "Notice",
                            "count": AlarmCountViewModel.Notice(),
                            "color": "#FCD202"
                        }, {
                            "alarm": "Information",
                            "count": AlarmCountViewModel.Information(),
                            "color": "#FCD202"
                        }
                    ],
                    "valueAxes": [{
                        "axisAlpha": 0,
                        "position": "left"
                    }],
                    "startDuration": 1,
                    "graphs": [{
                        "balloonText": "<b>[[category]]: [[value]]</b>",
                        "fillColorsField": "color",
                        "fillAlphas": 0.9,
                        "lineAlpha": 0.2,
                        "type": "column",
                        "valueField": "count"
                    }],
                    "chartCursor": {
                        "categoryBalloonEnabled": false,
                        "cursorAlpha": 0,
                        "zoomable": false
                    },
                    "categoryField": "alarm",
                    "categoryAxis": {
                        "gridPosition": "start",
                        "labelRotation": 0
                    },
                    "listeners": [{
                        "event": "clickGraphItem",
                        "method": function (event) {
                            alert(event.item.category);
                        }
                    }],
                    "export": {
                        "enabled": true
                    }

                });
            }
        }
    }();

    $(document).ready(function ()
    {
        var AlarmCountViewModel = {
            Emergency: ko.observable(),
            Critical: ko.observable(),
            Alert: ko.observable(),
            Error: ko.observable(),
            Warning: ko.observable(),
            Notice: ko.observable(),
            Information: ko.observable()
        }

        $.ajax({
            url: "http://217.78.97.240:8081/data/dashboard/event",
            success: function (alarmEvent) {
                AlarmCountViewModel = ko.mapping.fromJS(alarmEvent, {}, AlarmCountViewModel);
                ko.applyBindings(AlarmCountViewModel, document.getElementById('currentAlarm'));
            }
        });

        /*
        AlarmCountViewModel = ko.mapping.fromJS(
        {
            'Emergency': 1,
            'Critical': 15,
            'Alert': 7,
            'Error': 11,
            'Warning': 30,
            'Notice': 10,
            'Information': 50
        }, {}, AlarmCountViewModel);
        ko.applyBindings(AlarmCountViewModel, document.getElementById('currentAlarm'));
        */

        BarChart.initAmChart3(AlarmCountViewModel); // init metronic core componets
    });
</script>