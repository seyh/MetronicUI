<div class="col-lg-6 col-xs-12 col-sm-12">
    <div class="portlet light">
        <div class="portlet-title">
            <div class="caption ">
                <i class="fa fa-bell-o font-dark"></i>
                <span class="caption-subject font-dark bold uppercase">Current Alarms</span>
            </div>
        </div>
        <div class="portlet-body">
            <div id="dashboard_amchart_3" class="CSSAnimationChart" style="height:240px"></div>
        </div>
    </div>
</div>

<script src="../assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    var BarChart = function () {
        return {
            initAmChart3: function () {
                if (typeof (AmCharts) === 'undefined' || $('#dashboard_amchart_3').size() === 0) {
                    return;
                }

                var chart = AmCharts.makeChart("dashboard_amchart_3", {
                    "type": "serial",
                    "theme": "light",
                    "marginRight": 70,
                    "dataProvider": [{
                        "country": "Critical",
                        "visits": 3025,
                        "color": "#FF0F00"
                    }, {
                        "country": "Major",
                        "visits": 1882,
                        "color": "#FF6600"
                    }, {
                        "country": "Minor",
                        "visits": 1809,
                        "color": "#FF9E01"
                    }, {
                        "country": "Warning",
                        "visits": 1322,
                        "color": "#FCD202"
                    }],
                    "valueAxes": [{
                        "axisAlpha": 0,
                        "position": "left"
                    }],
                    "startDuration": 1,
                    "graphs": [{
                        "balloonText": "<b>[[category]]: [[value]]</b>",
                        "fillColorsField": "color",
                        "fillAlphas": 0.9,
                        "lineAlpha": 0.2,
                        "type": "column",
                        "valueField": "visits"
                    }],
                    "chartCursor": {
                        "categoryBalloonEnabled": false,
                        "cursorAlpha": 0,
                        "zoomable": false
                    },
                    "categoryField": "country",
                    "categoryAxis": {
                        "gridPosition": "start",
                        "labelRotation": 0
                    },
                    "listeners": [{
                        "event": "clickGraphItem",
                        "method": function (event) {
                            alert(event.item.category);
                        }
                    }],
                    "export": {
                        "enabled": true
                    }

                });
            }
        }
    }();

    jQuery(document).ready(function () {
        BarChart.initAmChart3(); // init metronic core componets
    });
</script>